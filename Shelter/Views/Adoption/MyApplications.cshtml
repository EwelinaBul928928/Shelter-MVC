@model List<Shelter.Models.AdoptionApplication>
@{
    ViewData["Title"] = "Moje wnioski";
}

<h1>Moje wnioski o adopcję</h1>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Zwierzę</th>
                <th>Data złożenia</th>
                <th>Status</th>
                <th>Uwagi</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var app in Model)
            {
                <tr>
                    <td>@app.Animal.Name (@app.Animal.Species)</td>
                    <td>@app.ApplicationDate.ToString("dd.MM.yyyy")</td>
                    <td>
                        @if (app.Status == "Pending")
                        {
                            <span class="badge bg-warning">Oczekujący</span>
                        }
                        else if (app.Status == "Approved")
                        {
                            <span class="badge bg-success">Zaakceptowany</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Odrzucony</span>
                        }
                    </td>
                    <td>@(app.Notes ?? "-")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">Nie masz żadnych wniosków o adopcję.</p>
}

<a href="@Url.Action("Index", "Animals")" class="btn btn-primary">Przeglądaj zwierzęta</a>
