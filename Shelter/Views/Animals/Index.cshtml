@model List<Shelter.Models.Animal>
@{
    ViewData["Title"] = "Zwierzęta do adopcji";
}

<h1>Zwierzeta do adopcji</h1>

<div class="mb-3">
    <form method="get" class="d-inline-flex">
        <select name="species" class="form-select me-2" onchange="this.form.submit()">
            @if (ViewBag.Species == "All" || ViewBag.Species == null)
            {
                <option value="All" selected>Wszystkie</option>
            }
            else
            {
                <option value="All">Wszystkie</option>
            }
            @if (ViewBag.Species == "Pies")
            {
                <option value="Pies" selected>Pies</option>
            }
            else
            {
                <option value="Pies">Pies</option>
            }
            @if (ViewBag.Species == "Kot")
            {
                <option value="Kot" selected>Kot</option>
            }
            else
            {
                <option value="Kot">Kot</option>
            }
            @if (ViewBag.Species == "Inne")
            {
                <option value="Inne" selected>Inne</option>
            }
            else
            {
                <option value="Inne">Inne</option>
            }
        </select>
    </form>
</div>

<div class="row">
    @foreach (var animal in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                @if (!string.IsNullOrEmpty(animal.PhotoUrl))
                {
                    <img src="@animal.PhotoUrl" class="card-img-top" alt="@animal.Name" style="height: 250px; object-fit: cover;">
                }
                else
                {
                    <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 250px;">
                        <span class="text-white">Brak zdjęcia</span>
                    </div>
                }
                <div class="card-body">
                    <h5 class="card-title">@animal.Name</h5>
                    <p class="card-text">
                        <strong>Gatunek:</strong> @animal.Species<br>
                        <strong>Wiek:</strong> @animal.Age lat<br>
                        @if (!string.IsNullOrEmpty(animal.Description))
                        {
                            <strong>Opis:</strong> @(animal.Description.Length > 100 ? animal.Description.Substring(0, 100) + "..." : animal.Description)<br>
                        }
                    </p>
                    <a href="@Url.Action("Details", "Animals", new { id = animal.Id })" class="btn btn-success">Szczegóły</a>
                </div>
            </div>
        </div>
    }
</div>

@if (Model.Count == 0)
{
    <p class="text-center text-muted">Brak dostępnych zwierząt w tej kategorii.</p>
}
