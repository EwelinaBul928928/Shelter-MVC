@{
    ViewData["Title"] = "Logowanie";
}

<h1>Logowanie</h1>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<form method="post" asp-action="Login" id="loginForm">
    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" name="email" required maxlength="100">
        <div class="invalid-feedback">Podaj poprawny adres email.</div>
    </div>
    <div class="mb-3">
        <label for="password" class="form-label">Hasło</label>
        <input type="password" class="form-control" id="password" name="password" required maxlength="100">
        <div class="invalid-feedback">Podaj hasło.</div>
    </div>
    <button type="submit" class="btn btn-success btn-lg">Zaloguj</button>
</form>

<script>
    (function() {
        var form = document.getElementById('loginForm');
        if (form) {
            form.addEventListener('submit', function(event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        }
    })();
</script>

<p class="mt-3">Nie masz konta? <a href="@Url.Action("Register", "Account")">Zarejestruj się</a></p>
