@{
    ViewData["Title"] = "Rejestracja";
}

<h1>Rejestracja</h1>

<form method="post" asp-action="Register" id="registerForm">
    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" name="email" required maxlength="100">
        <div class="invalid-feedback">Podaj poprawny adres email.</div>
    </div>
    <div class="mb-3">
        <label for="password" class="form-label">Hasło</label>
        <input type="password" class="form-control" id="password" name="password" required minlength="6" maxlength="100">
        <div class="form-text">Hasło musi mieć co najmniej 6 znaków.</div>
        <div class="invalid-feedback">Hasło musi mieć co najmniej 6 znaków.</div>
    </div>
    <div class="mb-3">
        <label for="firstName" class="form-label">Imię</label>
        <input type="text" class="form-control" id="firstName" name="firstName" required maxlength="50" pattern="[A-Za-zĄąĆćĘęŁłŃńÓóŚśŹźŻż\s]+">
        <div class="invalid-feedback">Imię może zawierać tylko litery.</div>
    </div>
    <div class="mb-3">
        <label for="lastName" class="form-label">Nazwisko</label>
        <input type="text" class="form-control" id="lastName" name="lastName" required maxlength="50" pattern="[A-Za-zĄąĆćĘęŁłŃńÓóŚśŹźŻż\s]+">
        <div class="invalid-feedback">Nazwisko może zawierać tylko litery.</div>
    </div>
    <div class="mb-3">
        <label for="phone" class="form-label">Telefon</label>
        <input type="tel" class="form-control" id="phone" name="phone" maxlength="20" pattern="[0-9\s\-\+]+">
        <div class="form-text">Opcjonalne. Format: +48 123 456 789</div>
        <div class="invalid-feedback">Podaj poprawny numer telefonu.</div>
    </div>
    <button type="submit" class="btn btn-success btn-lg">Zarejestruj</button>
</form>

<script>
    (function() {
        var form = document.getElementById('registerForm');
        if (form) {
            form.addEventListener('submit', function(event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        }
    })();
</script>

<p class="mt-3">Masz już konto? <a href="@Url.Action("Login", "Account")">Zaloguj się</a></p>
