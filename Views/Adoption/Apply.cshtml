@{
    ViewData["Title"] = "Wniosek o adopcję";
    var animal = ViewBag.Animal as Shelter.Models.Animal;
}

<h1>Wniosek o adopcję</h1>

@if (animal != null)
{
    <div class="alert alert-info">
        <h4>@animal.Name</h4>
        <p>Gatunek: @animal.Species | Rasa: @(animal.Breed ?? "Nieznana")</p>
    </div>

    <form method="post" asp-action="Apply" id="applyForm">
        <input type="hidden" name="animalId" value="@animal.Id">
        
        <div class="mb-3">
            <label for="address" class="form-label">Adres zamieszkania <span class="text-danger">*</span></label>
            <input type="text" class="form-control" id="address" name="address" required maxlength="200">
            <div class="invalid-feedback">Podaj adres zamieszkania.</div>
        </div>

        <div class="mb-3">
            <label for="phone" class="form-label">Numer telefonu <span class="text-danger">*</span></label>
            <input type="tel" class="form-control" id="phone" name="phone" required maxlength="20">
            <div class="invalid-feedback">Podaj numer telefonu.</div>
        </div>

        <div class="mb-3">
            <label for="experienceWithAnimals" class="form-label">Doświadczenie ze zwierzętami <span class="text-danger">*</span></label>
            <textarea class="form-control" id="experienceWithAnimals" name="experienceWithAnimals" rows="4" required maxlength="500"></textarea>
            <div class="form-text">Opisz swoje doświadczenie w opiece nad zwierzętami.</div>
            <div class="invalid-feedback">Opisz swoje doświadczenie ze zwierzętami.</div>
        </div>

        <div class="mb-3">
            <label for="hasOtherPets" class="form-label">Czy posiadasz inne zwierzęta? <span class="text-danger">*</span></label>
            <select class="form-select" id="hasOtherPets" name="hasOtherPets" required>
                <option value="">Wybierz</option>
                <option value="Tak">Tak</option>
                <option value="Nie">Nie</option>
            </select>
            <div class="invalid-feedback">Wybierz odpowiedź.</div>
        </div>

        <div class="mb-3">
            <label for="hasGarden" class="form-label">Czy posiadasz ogród? <span class="text-danger">*</span></label>
            <select class="form-select" id="hasGarden" name="hasGarden" required>
                <option value="">Wybierz</option>
                <option value="Tak">Tak</option>
                <option value="Nie">Nie</option>
            </select>
            <div class="invalid-feedback">Wybierz odpowiedź.</div>
        </div>

        <div class="mb-3">
            <label for="livingSituation" class="form-label">Sytuacja mieszkaniowa <span class="text-danger">*</span></label>
            <textarea class="form-control" id="livingSituation" name="livingSituation" rows="3" required maxlength="500"></textarea>
            <div class="form-text">Opisz swoją sytuację mieszkaniową (dom, mieszkanie, czy wynajmujesz, itp.).</div>
            <div class="invalid-feedback">Opisz swoją sytuację mieszkaniową.</div>
        </div>

        <div class="mb-3">
            <label for="notes" class="form-label">Dodatkowe uwagi (opcjonalnie)</label>
            <textarea class="form-control" id="notes" name="notes" rows="4" maxlength="1000"></textarea>
            <div class="form-text">Maksymalnie 1000 znaków.</div>
        </div>

        <button type="submit" class="btn btn-success">Złóż wniosek</button>
        <a href="@Url.Action("Details", "Animals", new { id = animal.Id })" class="btn btn-secondary">Anuluj</a>
    </form>

<script>
    (function() {
        var form = document.getElementById('applyForm');
        if (form) {
            form.addEventListener('submit', function(event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        }
    })();
</script>
}
