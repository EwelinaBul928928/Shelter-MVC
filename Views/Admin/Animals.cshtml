@model List<Shelter.Models.Animal>
@{
    ViewData["Title"] = "Zarządzanie zwierzętami";
}

<h1>Zarządzanie zwierzętami</h1>

<a href="@Url.Action("Create", "Admin")" class="btn btn-success mb-3">Dodaj zwierzę</a>

<table class="table">
    <thead>
        <tr>
            <th>Imię</th>
            <th>Gatunek</th>
            <th>Rasa</th>
            <th>Wiek</th>
            <th>Status</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var animal in Model)
        {
            <tr>
                <td>@animal.Name</td>
                <td>@animal.Species</td>
                <td>@(animal.Breed ?? "-")</td>
                <td>@animal.Age</td>
                <td>@animal.Status</td>
                <td>
                    <a href="@Url.Action("Edit", "Admin", new { id = animal.Id })" class="btn btn-sm btn-primary">Edytuj</a>
                    <a href="@Url.Action("Delete", "Admin", new { id = animal.Id })" class="btn btn-sm btn-danger">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">Powrót</a>
